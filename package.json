{
	"name": "@samuelmeuli/stylelint-config",
	"version": "2.0.1",
	"description": "My Stylelint configuration",
	"keywords": [
		"stylelint",
		"config",
		"stylelint-config",
		"css",
		"scss",
		"lint"
	],
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/stylelint-config",
	"license": "MIT",
	"files": [
		"index.js"
	],
	"main": "index.js",
	"scripts": {
		"format": "prettier --write",
		"release": "np --no-tests"
	},
	"dependencies": {
		"stylelint-config-prettier": "^8.0.0",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-sass-guidelines": "^6.2.0"
	},
	"peerDependencies": {
		"stylelint": "*"
	},
	"devDependencies": {
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"np": "^5.2.1",
		"prettier": "^1.19.1",
		"stylelint": "^12.0.0"
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
